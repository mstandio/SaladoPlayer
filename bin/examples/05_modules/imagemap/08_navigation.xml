<?xml version="1.0" encoding="utf-8"?>
<!--
	There are four ways to move around map: zoom panel, move panel, mouse drag and mouse scroll.
	Each of them can be disabled, you can also configure move and zoom speed. If you are using
	small image for map, you can disable all navigation methods and create simple static map.
	
	http://panozona.com/wiki/Module:ImageMap
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="checkerBlue" path="~panoramas/dz_checker_blue/checker_blue_f.xml"/>
	</panoramas>
	<modules>
		<ImageMap path="~modules/ImageMap-1.3.swf">
			<viewer path="~modules/images/imagemap/navigation_20x20_black.png" moveEnabled="false" zoomSpeed="0.05"/>
			<maps>
				<map id="map1" path="~media/images/maps/map_1.jpg">
					<waypoints path="~modules/images/imagemap/waypoints_button_20x20.png">
						<waypoint target="checkerBlue" position="x:150,y:100"/>
					</waypoints>
				</map>
			</maps>
		</ImageMap>
	</modules>
</SaladoPlayer>