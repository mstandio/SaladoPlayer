<?xml version="1.0" encoding="utf-8" ?>
<!--
	Choose navigation skin, point to image that will be used as map. Place waypoints on image and assign panoramas
	opened when waypoint gets clicked. When user loads panorama, module draws radar at waypoint targeting to given
	panorama. Module uses panorama direction attribute to synchronise radars with map. If your map is not positioned
	"north-up" you can use panShift value to alter all waypoints in your map.
	
	http://panozona.com/wiki/Module:ImageMap
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="checkerBlue" path="~panoramas/dz_checker_blue/checker_blue_f.xml" direction="45"/>
		<panorama id="checkerGreen" path="~panoramas/dz_checker_green/checker_green_f.xml" direction="90"/>
		<panorama id="checkerRed" path="~panoramas/dz_checker_red/checker_red_f.xml"/>
	</panoramas>
	<modules>
		<ImageMap path="~modules/ImageMap-1.3.swf">
			<viewer path="~modules/images/imagemap/navigation_black_20x20.png"/>
			<maps>
				<map id="map1" path="~media/images/maps/map_1.jpg" panShift="90">
					<waypoints path="~modules/images/imagemap/waypoints_button_20x20.png">
						<waypoint target="checkerGreen" position="x:200,y:350"/>
						<waypoint target="checkerRed" position="x:500,y:200"/>
						<waypoint target="checkerBlue" position="x:800,y:400"/>
					</waypoints>
				</map>
			</maps>
		</ImageMap>
	</modules>
</SaladoPlayer>