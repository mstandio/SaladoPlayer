<?xml version="1.0" encoding="utf-8"?>
<!--
	Elements should have unique targets among all other elements. Whenever user loads panorama, module switches to group
	that contains element targeting to given panorama. If user loads first panorama and none of groups contains
	elements targeting to given panorama, first group in line is displayed. If same situation occures when loading
	further panoramas, group is not changed.
	
	http://panozona.com/wiki/Module:DropDown
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="checkerGreen" path="~panoramas/dz_checker_green/checker_green_f.xml">
			<image id="cg_arrowRed" path="~hotspots/images/arrow_red.png" location="pan:-10" target="checkerRed"/>
			<image id="cg_arrowYellow" path="~hotspots/images/arrow_yellow.png" location="pan:10" target="checkerYellow"/>
		</panorama>
		<panorama id="checkerBlue" path="~panoramas/dz_checker_blue/checker_blue_f.xml">
			<image id="cb_arrowRed" path="~hotspots/images/arrow_red.png" location="pan:-10" target="checkerRed"/>
			<image id="cb_arrowYellow" path="~hotspots/images/arrow_yellow.png" location="pan:10" target="checkerYellow"/>
		</panorama>
		<panorama id="checkerRed" path="~panoramas/dz_checker_red/checker_red_f.xml">
			<image id="cr_arrowGreen" path="~hotspots/images/arrow_green.png" location="pan:-10" target="checkerGreen"/>
			<image id="cr_arrowBlue" path="~hotspots/images/arrow_blue.png" location="pan:10" target="checkerBlue"/>
		</panorama>
		<panorama id="checkerYellow" path="~panoramas/dz_checker_yellow/checker_yellow_f.xml">
			<image id="cy_arrowGreen" path="~hotspots/images/arrow_green.png" location="pan:-10" target="checkerGreen"/>
			<image id="cy_arrowBlue" path="~hotspots/images/arrow_blue.png" location="pan:10" target="checkerBlue"/>
		</panorama>
	</panoramas>
	<modules>
		<DropDown path="~modules/DropDown-1.3.swf">
			<groups>
				<group id="g1">
					<element target="checkerGreen" label="Green checker"/>
					<element target="checkerBlue" label="Blue checker"/>
				</group>
				<group id="g2">
					<element target="checkerRed" label="Red checker"/>
					<element target="checkerYellow" label="Yellow checker"/>
				</group>
			</groups>
		</DropDown>
	</modules>
</SaladoPlayer>