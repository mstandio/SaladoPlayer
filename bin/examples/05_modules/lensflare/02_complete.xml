<?xml version="1.0" encoding="utf-8" ?>
<!--
	
	http://panozona.com/wiki/Module:LensFlare
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="checkerBlue" path="~panoramas/dz_checker_blue/checker_blue_f.xml">
			<image id="cb_lightbulb1" path="~media/images/misc/lightbulb.png" location="pan:5,tilt:10" transform="flat:true"/>
			<image id="cb_lightbulb2" path="~media/images/misc/lightbulb.png" location="pan:90,tilt:20" transform="flat:true"/>
		</panorama>
		<panorama id="checkerRed" path="~panoramas/dz_checker_red/checker_red_f.xml">
			<image id="cr_lightbulb1" path="~media/images/misc/lightbulb.png" location="pan:-20,tilt:0" transform="flat:true"/>
		</panorama>
	</panoramas>
	<modules>
		<LensFlare path="~modules/lensflare/LensFlare-1.1.swf">
			<flares>
				<flare panorama="checkerBlue" location="pan:5,tilt:10" path="~modules/lensflare/images/flares2.png" brightness="level:99,distance:10" positions="1|2|3|4"/>
				<flare panorama="checkerBlue" location="pan:90,tilt:20" path="~modules/lensflare/images/flares1.png" brightness="level:150,distance:20" positions="1|2|3|4"/>
				<flare panorama="checkerRed" location="pan:-20,tilt:0" path="~modules/lensflare/images/flares2.png" brightness="level:90,distance:40" positions="1|2|3|4"/>
			</flares>
		</LensFlare>
		<DropDown path="~modules/DropDown-1.2.swf">
			<elements>
				<element target="checkerBlue" label="Blue checker"/>
				<element target="checkerRed" label="Red checker"/>
			</elements>
		</DropDown>
	</modules>
</SaladoPlayer>